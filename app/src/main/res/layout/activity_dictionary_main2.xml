<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6bcbc"
    >


    <RelativeLayout
        android:id="@+id/relative_1_green"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="#1bd17f">


        <Button
            android:id="@+id/btn_bmark"
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:text="Bmark" />

        <Button
            android:id="@+id/btn_quiz"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="32dp"
            android:layout_toEndOf="@+id/btn_bmark"
            android:text="QUIZ" />

        <Button
            android:id="@+id/btn_edit"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="35dp"
            android:layout_toEndOf="@+id/btn_quiz"
            android:text="EDIT" />

    </RelativeLayout>

    <SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relative_1_green"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        android:background="#f4f6b7"
        android:id="@+id/searchview" />

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/searchview"
        android:layout_marginStart="0dp"
        android:layout_marginTop="15dp"
        android:background="#a7f9db" />


</RelativeLayout>
