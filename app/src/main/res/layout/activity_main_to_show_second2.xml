<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff4646"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#bcf7dc"
        android:id="@+id/relativeLayout">


        <TextView
            android:id="@+id/word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btn_bmark"
            android:layout_marginStart="25dp"
            android:layout_marginTop="17dp"
            android:text="WORD :"
            android:textColor="#6c1e01"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_word_view"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_alignEnd="@+id/btn_bmark"
            android:layout_below="@+id/word"
            android:layout_marginTop="23dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_bmark"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="24dp"
            android:text="BOOKMARK THIS" />

        <Button
            android:id="@+id/btn_home"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignBottom="@+id/tv_mening_view"
            android:layout_alignStart="@+id/tv_mening_view"
            android:text="Back home" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="250dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#e2aff9">


        <TextView
            android:id="@+id/meaning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_mening_view"
            android:layout_alignStart="@+id/tv_mening_view"
            android:layout_marginBottom="14dp"
            android:layout_marginStart="18dp"
            android:text="MEANING :"
            android:textColor="#6c1e01"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_mening_view"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="TextView"
            android:textColor="#390202"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>







</RelativeLayout>
